<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pjt.goodminton.dao.BookDao">
	
	<insert id="insert" parameterType="Book" keyProperty="id" useGeneratedKeys="true">
		INSERT INTO book (date, user_id, court_id, team_total)
		VALUES (#{date}, #{userId}, #{courtId}, #{teamTotal})
	</insert>

	<update id="update" parameterType="Book">
		UPDATE book
		SET
		date = #{date}
		user_id = #{userId},
		court_id = #{courtId},
		team_total = #{writer}
	</update>
	
	<delete id="delete" parameterType="int">
		DELETE FROM board WHERE id = #{id}
	</delete>

	<select id="selectAll" resultMap="Book">
		SELECT *
		FROM book
	</select>

	<select id="select" resultMap="Book" parameterType="String">
		SELECT *,
		FROM board
		WHERE user_id = #{userId}
	</select>

	<select id="select" resultMap="Book" parameterType="String">
		SELECT *,
		FROM board
		WHERE location = #{location}
	</select>
</mapper>