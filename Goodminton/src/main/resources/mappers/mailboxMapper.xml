<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pjt.goodminton.model.dao.MailboxDao">
	
	<insert id="insert" parameterType="Mailbox" keyProperty="id" useGeneratedKeys="true">
		INSERT INTO mailbox (user_id, message)
		VALUES (#{userId}, #{message})
	</insert>

	<select id="select" resultType="Mailbox" parameterType="String">
		SELECT *
		FROM mailbox
		WHERE user_id = #{userId}
	</select>

	<select id="deleteAll" parameterType="String">
		DELETE FROM mailbox
		WHERE user_id = #{userId}
	</select>

	<select id="delete" parameterType="int">
		DELETE FROM mailbox
		WHERE id = #{id}
	</select>
</mapper>