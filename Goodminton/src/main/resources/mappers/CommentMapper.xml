<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.ssafit.model.dao.ReviewDao">
	
	<insert id="insert" parameterType="Comment" keyProperty="id" useGeneratedKeys="true">
		INSERT INTO comment
		VALUES (#{id}, #{videoId}, #{userId}, #{content})
	</insert>
	
	<select id="select" parameterType="String" resultType="Comment">
		SELECT *
		FROM review
		WHERE videoId=#{videoId}
	</select>
	
	<update id="update" parameterType="Comment">
		UPDATE comment
		SET content = #{content}
		WHERE id = #{id}
	</update>
	
	<delete id="delete" parameterType="int">
		DELETE FROM comment
		WHERE id = #{id}
	</delete>
</mapper>
